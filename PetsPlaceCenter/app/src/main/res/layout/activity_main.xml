<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF1E2"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />
    <ImageView
        android:id="@+id/userpic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="70dp"
        android:src="@drawable/user"/>
    <EditText
        android:id="@+id/username"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:hint="ชื่อผู้ใช้งาน"
        android:textColor="#A97147"
        android:layout_toRightOf="@id/userpic"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="270dp"/>
    <ImageView
        android:id="@+id/keypic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="70dp"
        android:src="@drawable/key"/>
    <EditText
        android:id="@+id/password"
        android:inputType="textPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:hint="รหัสผ่าน"
        android:textColor="#A97147"
        android:layout_toRightOf="@id/userpic"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="340dp"/>

        <Button
            android:id="@+id/login"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="เข้าสู่ระบบ"
            android:textSize="21dp"
            android:textAllCaps="false"
            android:background="#FFD185"
            android:textColor="#A97147"
            android:layout_marginTop="420dp"
            android:onClick="login"/>
        <Button
            android:id="@+id/register"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="สมัครสมาชิก"
            android:textSize="17dp"
            android:textAllCaps="false"
            android:background="#FFE5B9"
            android:textColor="#A97147"
            android:layout_marginTop="480dp"
            android:onClick="register"/>
</RelativeLayout>