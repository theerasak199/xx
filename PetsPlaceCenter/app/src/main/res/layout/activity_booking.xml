<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF1E2"
    tools:context=".BookingActivity"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:text="กลับ"
        android:textSize="25dp"
        android:background="#FFE5B9"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:onClick="back"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="จองสถานบริการรับฝากสัตว์เลี้ยง"
        android:textColor="#A97147"
        android:layout_marginBottom="20sp"
        android:textSize="25dp" />
    <TableLayout
        android:id="@+id/table"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:text="ชื่อสัตว์เลี้ยง :"
                android:textSize="25sp"
                android:textColor="#A97147"
                android:layout_marginLeft="40dp"/>
            <EditText
                android:id="@+id/namePet"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="#A97147"
                android:layout_marginLeft="10dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nametxt"
                android:text="วันที่เข้าฝาก :"
                android:textSize="25sp"
                android:textColor="#A97147"
                android:layout_marginLeft="40dp" />
            <EditText
                android:id="@+id/check_in"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="#A97147"
                android:inputType="date"
                android:layout_marginLeft="10dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="วันที่รับกลับ :"
                android:textSize="25sp"
                android:textColor="#A97147"
                android:layout_marginLeft="40dp" />
            <EditText
                android:id="@+id/check_out"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="#A97147"
                android:inputType="date"
                android:layout_marginLeft="10dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ห้องบริการ :"
                android:textSize="25sp"
                android:textColor="#A97147"
                android:layout_marginLeft="40dp" />
            <RadioGroup
                android:id="@+id/priceBooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#A97147"
                    android:text="ห้องธรรมดา"
                    android:textSize="20sp" />
                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#A97147"
                    android:text="VIP"
                    android:textSize="20sp" />
            </RadioGroup>
        </TableRow>
    </TableLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="จอง"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:background="#FFD185"
        android:textColor="#A97147"
        android:onClick="btnbooking"
        android:layout_marginTop="20sp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"/>

</LinearLayout>